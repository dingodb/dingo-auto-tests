<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="DingoDBTest">
    <!-- name中的值表示命名，可随意命名 -->
    <test name="BVTTest">
        <!-- 使测试用例按照我们的分组执行 -->
        <groups>
            <run>
                <!-- name中的赋值需要填写的是我们在类中对test分组的名称 -->
                <include name="BVT"></include>
            </run>
        </groups>
        <!-- name中的值为需要测试的具体类名，格式：包名.类名 -->
        <classes>
            <class name="io.dingodb.test.TestBVT"></class>
        </classes>
    </test>
